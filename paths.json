{
	"source": {
		"all": "./es6/**/*.*",
		"lib": ["./es6/lib/**/*.js", "!./es6/**/spec/**/*.js"],
		"spec": "./es6/spec/**/*.js"
	},

	"build": {
		"directories": {
			"es5": "./es5",
			"lib": "./es5/lib",
			"spec": "./es5/spec"
		},
		"lib": "./es5/lib/**/*.js",
		"spec": "./es5/**/*.spec.js",
		"sourceSpec": "./es6/**/*.spec.js"
	}
}
